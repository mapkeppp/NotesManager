<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.notesmanager.ui.fragments.SplashFragment"
        android:label="Splash">
        <action
            android:id="@+id/action_splashFragment_to_notesListFragment"
            app:destination="@id/notesListFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/notesListFragment"
        android:name="com.example.notesmanager.ui.fragments.NotesListFragment"
        android:label="Notes">
        <action
            android:id="@+id/action_notesListFragment_to_noteEditFragment"
            app:destination="@id/noteEditFragment" />
    </fragment>

    <fragment
        android:id="@+id/noteEditFragment"
        android:name="com.example.notesmanager.ui.fragments.NoteEditFragment"
        android:label="Edit Note">
        <argument
            android:name="noteId"
            android:defaultValue="-1L"
            app:argType="long" />
    </fragment>
</navigation>